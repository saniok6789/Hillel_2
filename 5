class MutableClass:
    def add_attribute(self, name, value):
        setattr(self, name, value)
    def remove_attribute(self, name):
        delattr(self, name)

obj = MutableClass()
obj.add_attribute("name", "Python")
print(obj.name)  # Перевіряємо, що атрибут доданий

obj.remove_attribute("name")
# Якщо спробуєте роздрукувати obj.name тут, ви отримаєте помилку AttributeError, бо атрибут видалений
